<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="250dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_image_news"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/newspaper"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_description_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_black"
            android:layout_marginHorizontal="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_author_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_favorite_news_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_bookmark_24"
                android:visibility="gone"
                android:tint="@color/red"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/ib_share_news"
                android:layout_marginEnd="16dp"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_favorite_news_non_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                android:visibility="visible"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/ib_share_news"
                android:layout_marginEnd="16dp"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/ib_share_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_share_24"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>